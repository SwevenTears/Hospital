<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/hos_r_id_text"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="473dp"
        android:gravity="bottom|start"
        android:orientation="vertical"
        android:text="病历号"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/search_hos_r_id"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:inputType="number"
        android:maxLines="1"
        app:layout_constraintLeft_toRightOf="@+id/hos_r_id_text"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_d_keshi"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="473dp"
        android:gravity="bottom|start"
        android:orientation="vertical"
        android:text="科室"
        app:layout_constraintLeft_toRightOf="@+id/search_hos_r_id"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/search_d_keshi"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintLeft_toRightOf="@+id/text_d_keshi"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_d_name"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        android:gravity="bottom|start"
        android:orientation="vertical"
        android:text="主治医生"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hos_r_id_text" />

    <EditText
        android:id="@+id/search_d_name"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintLeft_toRightOf="@+id/text_d_name"
        app:layout_constraintTop_toBottomOf="@+id/hos_r_id_text" />

    <Button
        android:id="@+id/query_btn"
        android:layout_width="70dp"
        android:layout_height="38dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="52dp"
        android:background="@color/aqua"
        android:text="查询"
        android:textColor="@color/blue"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/search_d_name"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/clear_btn"
        android:layout_width="70dp"
        android:layout_height="38dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="52dp"
        android:background="@color/aqua"
        android:text="清空"
        android:textColor="@color/blue"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/query_btn"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:background="@color/white"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_d_name">

        <TextView
            android:id="@+id/id"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginStart="4dp"
            android:gravity="center"
            android:text="门诊编号" />

        <TextView
            android:id="@+id/doctor1"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginStart="4dp"
            android:gravity="center"
            android:text="主治医生" />

        <TextView
            android:id="@+id/keshi1"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginStart="4dp"
            android:gravity="center"
            android:text="科室" />

        <TextView
            android:id="@+id/state"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginStart="4dp"
            android:gravity="center"
            android:text="状态" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>