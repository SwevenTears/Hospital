<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ill"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="473dp"
            android:orientation="vertical"
            android:text="病历号："
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="110dp"
            android:layout_height="27dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintLeft_toRightOf="@+id/ill"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/keshi"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="473dp"
            android:orientation="vertical"
            android:text="科室："
            app:layout_constraintLeft_toRightOf="@+id/text1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintLeft_toRightOf="@+id/keshi"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/doctor"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:text="主治医生："
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ill" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="105dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintLeft_toRightOf="@+id/doctor"
            app:layout_constraintTop_toBottomOf="@+id/ill" />

        <Button
            android:id="@+id/check"
            android:layout_width="80dp"
            android:layout_height="39dp"
            android:background="@color/aqua"
            android:text="查询"
            android:textSize="20dp"
            android:textColor="@color/blue"
            tools:layout_editor_absoluteX="208dp"
            tools:layout_editor_absoluteY="40dp" />

        <Button
            android:id="@+id/clear"
            android:layout_width="80dp"
            android:layout_height="39dp"
            android:background="@color/aqua"
            android:text="清空"
            android:textSize="20dp"
            android:textColor="@color/blue"
            tools:layout_editor_absoluteX="296dp"
            tools:layout_editor_absoluteY="40dp" />

        <TextView
            android:id="@+id/id"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:text="门诊编号："
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text3" />

        <TextView
            android:id="@+id/doctor1"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:text="主治医生："
            app:layout_constraintLeft_toRightOf="@+id/id"
            app:layout_constraintTop_toBottomOf="@+id/text3" />

        <TextView
            android:id="@+id/time"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:text="挂号时间："
            app:layout_constraintLeft_toRightOf="@+id/doctor1"
            app:layout_constraintTop_toBottomOf="@+id/text3" />

        <TextView
            android:id="@+id/keshi1"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:text="科室："
            app:layout_constraintLeft_toRightOf="@+id/time"
            app:layout_constraintTop_toBottomOf="@+id/text3" />

        <TextView
            android:id="@+id/state"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:text="状态："
            app:layout_constraintLeft_toRightOf="@+id/keshi1"
            app:layout_constraintTop_toBottomOf="@+id/text3" />


    </android.support.constraint.ConstraintLayout>

    <Button
        android:id="@+id/add"
        android:layout_width="100dp"
        android:layout_height="39dp"
        android:text="门诊挂号"
        android:textColor="@color/white"
        android:background="@color/green"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="125dp" />

    <Button
        android:id="@+id/delete"
        android:layout_width="70dp"
        android:layout_height="39dp"
        android:background="@color/green"
        android:text="退号"
        android:textColor="@color/white"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="116dp"
        tools:layout_editor_absoluteY="125dp" />


</android.support.constraint.ConstraintLayout>