<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="8dp"
    android:paddingLeft="16dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_hos_name"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="姓名"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/add_hos_name"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:textSize="20dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_hos_idcard"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="身份证号"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/add_hos_idcard"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_hos_medical"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="社保号"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/add_hos_medical"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_hos_guahao"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="挂号费"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/add_hos_guahao"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/text_hos_guahao_yuan"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="元"
           android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_hos_phone"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="联系电话"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/add_hos_phone"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_hos_selfprice"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="是否自费"
            android:textSize="20dp"/>
        <RadioButton
            android:id="@+id/selfprice_no"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="否"
            android:textSize="20dp"/>
        <RadioButton
            android:id="@+id/selfprice_yes"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="是"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_hos_sex"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="性别"
            android:textSize="20dp"/>
        <RadioButton
            android:id="@+id/sex_boy"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="男"
            android:textSize="20dp"/>
        <RadioButton
            android:id="@+id/sex_girl"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="女"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_hos_age"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="年龄"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/add_hos_age"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_hos_work"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="职业"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/add_hos_work"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_hos_lookdoctor"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="初复诊"
            android:textSize="20dp"/>
        <RadioButton
            android:id="@+id/lookdoctor_first"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="初诊"
            android:textSize="20dp"/>
        <RadioButton
            android:id="@+id/lookdoctor_second"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="复诊"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_d_keshi"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="所挂科室"
            android:textSize="20dp"/>
        <Spinner
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textSize="20dp"
            android:entries="@array/keshi" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_d_name"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="指定医生"
            android:textSize="20dp"/>
        <Spinner
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textSize="20dp"
            android:entries="@array/doctor" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_hos_remark"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="备注"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/add_hos_remark"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:textSize="20dp" />
    </LinearLayout>
</LinearLayout>