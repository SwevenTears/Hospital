<android.support.v7.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/hos_r_id"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:text="门诊编号："
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text3" />

        <TextView
            android:id="@+id/d_name"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:text="主治医生："
            app:layout_constraintLeft_toRightOf="@+id/id"
            app:layout_constraintTop_toBottomOf="@+id/text3" />

        <TextView
            android:id="@+id/hos_r_create_time"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:text="挂号时间："
            app:layout_constraintLeft_toRightOf="@+id/doctor1"
            app:layout_constraintTop_toBottomOf="@+id/text3" />

        <TextView
            android:id="@+id/d_keshi"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:text="科室："
            app:layout_constraintLeft_toRightOf="@+id/time"
            app:layout_constraintTop_toBottomOf="@+id/text3" />

        <TextView
            android:id="@+id/hos_r_state"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:text="状态："
            app:layout_constraintLeft_toRightOf="@+id/keshi1"
            app:layout_constraintTop_toBottomOf="@+id/text3" />


    </LinearLayout>

